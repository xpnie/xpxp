FUNCTION FC1003 : VOID
VAR_INPUT
    IN_R:REAL;
    IN_MAX, IN_MIN:REAL;
    OUT_MAX, OUT_MIN:REAL;
END_VAR
VAR_OUTPUT
    OUT_R:REAL;
    FEH:BOOL;
END_VAR
VAR_TEMP
    DIFF1, DIFF2:REAL;
END_VAR

OUT_R := (IN_R - IN_MIN) / (IN_MAX - IN_MIN) * (OUT_MAX - OUT_MIN) + OUT_MIN;

IF OUT_R < OUT_MIN THEN
    OUT_R := OUT_MIN;
ELSIF OUT_R > OUT_MAX THEN
    OUT_R := OUT_MAX;
END_IF;

FEH := TRUE;
END_FUNCTION;